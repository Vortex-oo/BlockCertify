  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": [
    "./scripts",      // Include your scripts folder
    "./test",         // Include your tests folder
    "./hardhat.config.ts"
  ]
}
